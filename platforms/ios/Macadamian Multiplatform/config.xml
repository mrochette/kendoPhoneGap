<?xml version='1.0' encoding='utf-8'?>
<widget id="com.macadamian.phoneGapTest" version="1.0.0" versionCode="10" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Hello Cordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <access origin="*" />
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value=".25" />
    <preference name="HideKeyboardFormAccessoryBar" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="KeyboardShrinksView" value="false" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <author email="mrochette@macadamian.com" href="http://www.macadamian.com">
        Michael Rochette
    </author>
    <content src="index.html" />
    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:platform name="blackberry" />
    <preference name="phonegap-version" value="2.9.0" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="BackgroundColor" value="0xff313131" />
    <icon src="icon.png" />
    <icon gap:platform="ios" height="57" src="icon/ios/icon-57.png" width="57" />
    <icon gap:platform="ios" height="72" src="icon/ios/icon-72.png" width="72" />
    <icon gap:platform="ios" height="114" src="icon/ios/icon-57-2x.png" width="114" />
    <icon gap:platform="ios" height="144" src="icon/ios/icon-72-2x.png" width="144" />
    <icon gap:density="ldpi" gap:platform="android" src="icon/android/icon-36-ldpi.png" />
    <icon gap:density="mdpi" gap:platform="android" src="icon/android/icon-48-mdpi.png" />
    <icon gap:density="hdpi" gap:platform="android" src="icon/android/icon-72-hdpi.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="icon/android/icon-96-xhdpi.png" />
    <icon gap:platform="blackberry" src="icon/blackberry10/icon-80.png" />
    <gap:splash src="splash.png" />
    <gap:splash gap:platform="ios" height="480" src="splash/ios/Default.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="splash/ios/Default_at_2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1136" src="splash/ios/Default_iphone5.png" width="640" />
    <gap:splash gap:platform="ios" height="748" src="splash/ios/Default-Landscape.png" width="1024" />
    <gap:splash gap:platform="ios" height="1004" src="splash/ios/Default-Portrait.png" width="768" />
    <gap:splash gap:platform="ios" height="1496" src="splash/ios/Default-Landscape_at_2x.png" width="2048" />
    <gap:splash gap:platform="ios" height="2008" src="splash/ios/Default-Portrait_at_2x.png" width="1536" />
    <gap:splash gap:density="ldpi" gap:platform="android" src="splash/android/ldpi.png" />
    <gap:splash gap:density="mdpi" gap:platform="android" src="splash/android/mdpi.png" />
    <gap:splash gap:density="hdpi" gap:platform="android" src="splash/android/hdpi.png" />
    <gap:splash gap:density="xhdpi" gap:platform="android" src="splash/android/xhdpi.png" />
    <gap:splash gap:platform="blackberry" src="splash/blackberry10/splash.png" />
</widget>
